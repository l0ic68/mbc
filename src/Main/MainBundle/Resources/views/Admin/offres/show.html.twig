{% extends "::layout/layout.html.twig" %}

{% block body %}
    <h1>Offre</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ offre.id }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ offre.description }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ offre.name }}</td>
            </tr>
            <tr>
                <th>Price</th>
                <td>{{ offre.price }}</td>
            </tr>
            <tr>
                <th>Date_offre</th>
                <td>{% if offre.dateoffre %}{{ offre.dateoffre|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Date_offre1</th>
                <td>{% if offre.dateoffre1 %}{{ offre.dateoffre1|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Date_offre2</th>
                <td>{% if offre.dateoffre2 %}{{ offre.dateoffre2|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Duration</th>
                <td>{{ offre.duration }}</td>
            </tr>
            <tr>
                <th>Location</th>
                <td>{{ offre.location }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('admin_offres_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('admin_offres_edit', { 'id': offre.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
