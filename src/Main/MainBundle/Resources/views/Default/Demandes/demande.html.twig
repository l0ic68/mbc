{% extends "::layout/layout.html.twig" %}
{% block stylesheets %}
	<link rel="stylesheet" href="{{ asset('css/publication.css') }}" />
{% endblock %}
{% block body %}
<div class="section no-pad-bot " id="index-banner" style="padding-top:90px">
    <div class="  full-width z-depth-2">
      <div class="row center">
        <div class="col m12 back-img white">
          <div>
            <h4 class="gray marg-top bold">{{demande.candidat.nomdemande}}</h4>
            <div class="col m12">
              <div class="col m4">
                <div class="col m12">
                  <img class="materialboxed z-depth-2 equipe circle img-center" data-caption="Nom prénom fonction" width="250" height="250" src="{{asset(demande.media.path)}}">
                </div>
                <div class="col m12 marg">
                  <span class="bold">{{demande.candidat.nom}} {{demande.candidat.prenom}}</span>
                </div>
                <div class="col m12">
                  <span class="italic">{{demande.candidat.metier}}</span>
                </div>
                <div class="col m12">
                  <a href="{{demande.candidat.linkedinlink}}"> <img class="picto-in" src="{{ asset('img/picto/linkedin-letters.png') }}"> </a>
                  <a href="{{demande.candidat.email}}"> <img class="picto-mail" src="{{ asset('img/picto/mail.png') }}"> </a>
                </div>
              </div>
              <div class="col m4">
              <div class="col m12 marg-bottom"></div>
              <div class="col m12">
                <span class="bold" style="text-align: justify;">Bio :{{demande.candidat.descriptiondemande}}</span>
            </div>
              </div>
              <div class="col m4">
                <div class="col m12 marg-bottom"></div>
                <div class="col m12 marg-bottom"></div>
                <div class="col m12 marg-bottom"></div>
                <div class="col m12">
                  <a class="waves-effect waves-light btn-large"><i class="material-icons left">play_for_work</i>Curiculum Vitae</a>
                </div>
                
              </div>
              
              
              <div class="col m12 marg-bottom"></div>
            </div>
          </div>
          <hr>
            {% if(app.user != null) %}
	          <a href="{{ path('enquiryform', {'id': demande.candidat.id }) }}" class="btn">Contactez la personne</a>
          <hr>
            {% endif %}
            <div class="col m12">
                <h4 class="gray marg-top bold">Informations personnelles</h4>
            </div>
            <div class="col m12">
                <span class="bold">nom:{{demande.candidat.nom}}</span>
                <span class="bold">Prénom:{{demande.candidat.prenom}}</span>
            </div>
            <div class="col s12 marg-bottom"></div>
            <div class="col m12">
                <span class="bold">Téléphone :{{demande.candidat.phone}}</span>
                </div>
                <div class="col s12 marg-bottom"></div>
            <div class="col m12">
                <span class="bold">Adresse :{{demande.candidat.adresse}}</span>
            </div>
            <div class="col s12 marg-bottom"></div>
            <div class="col m12">
                <span class="bold">Code postal :{{demande.candidat.codepostal}}</span>
            </div>
            <!--<div class="col m12">
                <span class="bold">Bio :{#{demande.description}#}</span>
            </div>-->
            
                <div class="col m12 marg-bottom"></div>
                
        </div>
      </div>
    </div>
  </div>	


{% endblock %}
