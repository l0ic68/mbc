{% trans_default_domain 'FOSUserBundle' %}

<div class="section no-pad-bot " id="index-banner" style="padding-top:80px" >
    <div class="  full-width z-depth-2">
        <div class="row center">
            <div class="col m12 back-img white">
                <div>
                    <h4 class="gray marg-top bold">Vos informations de profil</h4>
                    <div class="col m12">
<div class="fos_user_user_show">
    <p>Nom: {{ user.nom }}</p>
    <p>Prenom : {{ user.prenom }}</p>
    <p>Adresse e-mail : {{ user.email }}</p>
    <p>Adresse : {{ user.adresse }}</p>
    <p>Code postal : {{ user.codePostal }}</p>
    <a href ="{{ path('fos_user_profile_edit') }}" class="waves-effect waves-light btn"><i class="material-icons left">edit</i>Modifier vos informations</a>

    <p>PAGE 1</p>
    <a href="{{ path('retours', {'id': app.user.id }) }}" class="btn">regardez les retours de vos annonces (chiffre total de retours : x)</a>
    <p>PAGE 1</p>

    <a href="{{ path('add_demande')}}" class="waves-effect waves-light btn" style="width: 77px"><i class="material-icons">note_add</i></a>

    <!-- Modal Trigger -->
    <ul class="collapsible" data-collapsible="accordion">
        <li>
            <div class="collapsible-header"><i class="material-icons">note_add</i>Demande d'offre</div>
            <div class="collapsible-body"><span>attention, les informations qui seront utilisées pour créer votre demande d'emploi sont vos informations personnelles de profil, êtes vous certain de vouloir publier votre demande</span></div>
            <div class="collapsible-body"><span><a href ="{{  path('add_demande') }}">Oui</a></span></div>
            <div class="collapsible-body"><span>Non </span></div>
            <div class="collapsible-body"><span><a href ="{{  path('fos_user_profile_edit') }}">Modifier mes informations personnel</a></span></div>
        </li>
    </ul>



    <h4 class="gray marg-top bold">Vos demandes d'offres</h4>
    <table class="striped">
            <thead>
            <tr>
                <th>Name</th>
                <th>description</th>
                <th>nombre de vues</th>
                <th>Annonce postée le</th>
            </tr>
            </thead>

            <tbody>
        {% for demande in demandes %}
            {% if demande.candidat.id == app.user.id %}
          <tr>
            <td><a href="{{ path('demande', {'id': demande.id }) }}">{{demande.candidat.nom}}</a></td>
            <td>{{demande.candidat.descriptionDemande | slice(0, 30)}}</td>
            <td>{{demande.price}}</td>
            <td>{{demande.dateDemande|date("d/m/Y", "Europe/Paris")}}</td>
            <td><a class="waves-effect waves-light btn" style="
    width: 77px"><i class="material-icons left">edit</i></a></td>
          </tr>

            {% endif %}
        {% endfor %}
                </tbody>
      </table>
</div>
</div>
</div>
</div>
</div>
</div>
</div>
<script>
    $(document).ready(function(){
        $('.collapsible').collapsible();
    });
</script>